{% block form %}
<div class="container">
  <form>
    <div class="form-type-textfield">
      <label>Text input label</label>
      <input type="text" maxlength="60" size="60" class="form-text">
    </div>
    <div class="form-item form-type-textfield form-item-name">
      <label>Text input error</label>
      <input type="text" maxlength="60" size="60" class="form-text error">
    </div>
    <div class="form-type-textfield">
      <label>Text input success</label>
      <input type="text" maxlength="60" size="60" class="form-text success">
    </div>
    <div class="form-type-textarea">
      <label>Test textarea</label>
      <div class="form-textarea-wrapper resizable textarea-processed resizable-textarea">
        <textarea class="form-textarea" rows="5" cols="60"></textarea>
      </div>
    </div>
    <div class="form-actions">
      <input type="submit" class="form-submit" value="Submit">
    </div>
  </form>
</div>
{% endblock %}
